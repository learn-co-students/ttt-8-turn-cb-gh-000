#!/usr/bin/env ruby
require_relative '../lib/turn'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)
index = gets.strip
index = input_to_index(index)
#puts index
if valid_move?(board, index)
  move(board, index, player = 'X')
  display_board(board)
else
  turn(board)
end
